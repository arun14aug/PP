<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/first_name"
                    android:inputType="text"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_person"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/last_name"
                    android:inputType="text"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/mobile"
                    android:inputType="phone"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_address" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_address_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_address_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_person"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_address_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/address_2"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_address_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_person"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyEditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/city"
                    android:inputType="text"
                    android:paddingBottom="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_10"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/vw_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_person"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/bg_color"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"
                    android:layout_weight="0.70"
                    android:background="@color/bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.pinlesspay.customUi.MyEditText
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/state"
                        android:inputType="text"
                        android:paddingBottom="@dimen/padding_10"
                        android:paddingTop="@dimen/padding_10"
                        android:textColor="@color/waterfall_text_color"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="normal" />

                    <View
                        android:id="@+id/vw_state"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_1"
                        android:background="@color/login_line_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"
                    android:layout_weight="0.30"
                    android:background="@color/bg_color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.pinlesspay.customUi.MyEditText
                        android:id="@+id/et_zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/zip"
                        android:inputType="textPostalAddress"
                        android:paddingBottom="@dimen/padding_10"
                        android:paddingTop="@dimen/padding_10"
                        android:textColor="@color/waterfall_text_color"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="normal" />

                    <View
                        android:id="@+id/vw_zip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding_1"
                        android:background="@color/login_line_color" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_person"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:background="@color/bg_color"
                android:gravity="center"
                android:orientation="vertical">

                <com.pinlesspay.customUi.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingTop="@dimen/padding_10"
                    android:text="@string/country"
                    android:textColor="@color/waterfall_text_color"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="normal" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/txt_country_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_7"
                    android:paddingTop="@dimen/padding_7"
                    app:ccpSearchBox_showPhoneCode="false"
                    app:ccp_showPhoneCode="false"
                    app:contentColor="@color/login_text_color"
                    app:hideNameCode="true"
                    app:showFlag="false"
                    app:showFullName="true"
                    app:textSize="@dimen/text_size_large" />

                <View
                    android:id="@+id/vw_country_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_1"
                    android:background="@color/login_line_color" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>